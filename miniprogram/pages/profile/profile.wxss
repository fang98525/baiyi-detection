/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f6f7f9;
}

/* Header Area */
.header {
  background: linear-gradient(135deg, var(--color-primary, #1890ff), #3a7bd5);
  padding: 80rpx 40rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.2);
}

.avatar-container {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.role-tag {
  background: rgba(0, 0, 0, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

/* Menu List */
.menu-group {
  background: #fff;
  margin: -60rpx 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 10rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  padding: 32rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 1rpx;
  background-color: #f0f0f0;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-content {
  display: flex;
  align-items: center;
}

.menu-icon {
  margin-right: 24rpx;
  font-size: 36rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
  font-family: monospace;
}

.version {
  color: #999;
  font-size: 26rpx;
}

/* Logout Button */
.btn-logout {
  margin: 60rpx 30rpx;
  background: #fff;
  color: #ff4d4f;
  font-weight: 500;
  font-size: 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn-logout:active {
  background-color: #fafafa;
  opacity: 0.9;
}

/* Modal Common */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10000; /* 增加 z-index 确保在最上层 */
}

.modal-container {
  width: 80%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: scaleIn 0.2s ease-out;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-body {
  padding: 40rpx 30rpx;
}

.input-group {
  margin-bottom: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.modal-input {
  font-size: 30rpx;
  color: #333;
  width: 100%;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  background: #fff;
  border: none;
  border-radius: 0;
  padding: 30rpx 0;
  font-size: 32rpx;
  line-height: 1.5;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #1890ff;
  font-weight: 600;
}

.modal-btn.full-width {
  border-right: none;
}

/* About Modal Specific */
.about-container {
  width: 85%;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.about-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 20rpx;
}

.about-logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.about-app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.about-content {
  flex: 1;
  padding: 0 40rpx 40rpx;
  overflow-y: auto;
}

.about-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  bottom: 8rpx;
  width: 6rpx;
  background: #1890ff;
  border-radius: 4rpx;
}

.section-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}
