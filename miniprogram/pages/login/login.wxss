/* pages/login/login.wxss */
.login-container {
  padding: 40rpx;
  background-color: #fff;
  height: 100vh;
  justify-content: center;
  box-sizing: border-box;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  background-color: #eee; /* Placeholder */
  border-radius: 50%;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #07C160; /* Using default primary color if var not defined */
}

.form-area {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.radio-group {
    display: flex;
    gap: 30rpx;
    padding: 10rpx 0;
}

.radio {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.login-btn {
  margin-top: 50rpx;
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #07C160;
  color: #fff;
  padding: 0;
  font-weight: normal;
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.link {
  color: #07C160;
}

/* 开发者信息 */
.footer-info {
  margin-top: 80rpx;
  text-align: center;
  color: #cccccc;
  font-size: 30rpx;
}