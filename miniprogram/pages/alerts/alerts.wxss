/* pages/alerts/alerts.wxss */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: var(--text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--color-primary);
  border-radius: 2rpx;
}

.alert-list {
  padding: 20rpx;
}

.alert-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f7fa;
}

.alert-time {
  color: var(--text-secondary);
  font-size: 24rpx;
}

.alert-level {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.level-high { color: #fff; background: var(--color-alert); }
.level-medium { color: #fff; background: var(--color-warning); }

.item-body {
  margin-bottom: 16rpx;
}

.row {
  display: flex;
  margin-bottom: 8rpx;
}

.label {
  color: var(--text-secondary);
  width: 140rpx;
}

.value {
  color: var(--text-main);
  flex: 1;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-pending { color: var(--color-alert); background: rgba(250, 81, 81, 0.1); }
.status-handling { color: var(--color-primary); background: rgba(18, 150, 219, 0.1); }
.status-done { color: var(--color-success); background: rgba(7, 193, 96, 0.1); }

.arrow {
  color: #ccc;
}

.empty-tip {
  text-align: center;
  padding-top: 100rpx;
  color: var(--text-secondary);
}

