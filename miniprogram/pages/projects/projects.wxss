/* miniprogram/pages/projects/projects.wxss */
page {
  background-color: #f5f5f5;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* Tabs */
.tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1296DB;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1296DB;
  border-radius: 3rpx;
}

/* List */
.list-container {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.project-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  transition: all 0.3s ease;
}

.project-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tag-blue {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.tag-green {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.card-content {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  line-height: 1.4;
}

.label {
  color: #888;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  padding: 10rpx 24rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  background: #fff;
}

.action-btn:active {
  background-color: #f5f5f5;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* Floating Button */
.fab-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #1296DB;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(18, 150, 219, 0.4);
  z-index: 100;
}

.plus-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  margin-top: -4rpx;
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-card {
  width: 85%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  max-height: 80%;
  display: flex;
  flex-direction: column;
  animation: popIn 0.3s ease-out;
}

@keyframes popIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
  line-height: 1;
}

.modal-content {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.archive-item {
  display: flex;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  flex-wrap: wrap;
}

.archive-item.full-width {
  flex-direction: column;
}

.archive-item.full-width .archive-label {
  margin-bottom: 10rpx;
}

.archive-label {
  color: #888;
  width: 160rpx;
  flex-shrink: 0;
}

.archive-value {
  color: #333;
  flex: 1;
  line-height: 1.5;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  background-color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5 !important;
  color: #666 !important;
  font-size: 28rpx;
  margin: 0;
  padding: 16rpx 36rpx;
  border-radius: 8rpx;
  line-height: 1.2;
  border: none;
}

.btn-primary {
  background-color: #1296DB !important;
  color: #fff !important;
  font-size: 28rpx;
  margin: 0;
  padding: 16rpx 36rpx;
  border-radius: 8rpx;
  line-height: 1.2;
  border: none;
}
