/* miniprogram/pages/project-add/project-add.wxss */
page {
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.container {
  padding: 20rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  border-left: 8rpx solid #1296DB;
  padding-left: 16rpx;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  border: 1rpx solid #ddd;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.picker {
  border: 1rpx solid #ddd;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker.placeholder {
  color: #999;
}

.radio-label {
  margin-right: 30rpx;
  font-size: 28rpx;
}

.double-input {
  display: flex;
  gap: 20rpx;
}

.picker-half {
  flex: 1;
}

.picker-inner {
  border: 1rpx solid #ddd;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.input-with-btn {
  display: flex;
  gap: 20rpx;
}

.input-with-btn .input {
  flex: 1;
}

.btn-small {
  margin: 0;
  height: 76rpx; /* Matches input height approx */
  line-height: 76rpx;
}

.block-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.btn-area {
  margin-top: 40rpx;
}

