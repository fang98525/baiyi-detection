/* pages/alert-detail/alert-detail.wxss */
.steps-area {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.step .circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #eee;
  color: #999;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.step.active .circle {
  background: var(--color-primary);
  color: #fff;
}

.step text {
  font-size: 24rpx;
  color: #999;
}

.step.active text {
  color: var(--color-primary);
}

.line {
  width: 80rpx;
  height: 2rpx;
  background: #eee;
  margin: 0 10rpx;
  margin-bottom: 30rpx; /* Align with circle center approximately */
}

.line.active {
  background: var(--color-primary);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  border-left: 6rpx solid var(--color-primary);
  padding-left: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-row.column {
  flex-direction: column;
}

.info-row.column .label {
  margin-bottom: 12rpx;
}

.label {
  color: var(--text-secondary);
}

.value {
  color: var(--text-main);
  text-align: right;
}

.remark {
  text-align: left;
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}

/* Form Styles */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.radio {
  display: flex;
  align-items: center;
}

.image-uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item, .upload-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-btn {
  background: #f5f5f5;
  border: 1rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 60rpx;
}

.textarea {
  width: 100%;
  background: #f9f9f9;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  height: 200rpx;
}

.submit-btn {
  margin-top: 40rpx;
}

.result-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}

